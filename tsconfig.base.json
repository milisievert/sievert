{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@sievert/source"],
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@sievertjs/core": ["packages/core/src/index.ts"],
      "@sievert/lexer": ["libs/lexer/src/index.ts"],
      "@sievert/graph": ["libs/graph/src/index.ts"],
      "@sievert/signals": ["libs/signals/src/index.ts"]
    }
  }
}
